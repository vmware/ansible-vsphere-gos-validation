{
  "ignition": {
    "config": {},
    "timeouts": {},
    "version": "2.1.0"
  },
  "passwd": {
    "users": [
     {
        "name": "{{ vm_username }}",
        "sshAuthorizedKeys": [
          "{{ ssh_public_key }}"
        ]
     {% if new_user is defined and new_user != 'root' and new_user != 'core' %}
     },
     {
        "name": "{{ new_user }}",
        "passwordHash": "{{ vm_password_hash }}",
        "sshAuthorizedKeys": [
          "{{ ssh_public_key }}"
        ]
     {% endif %}
     }
    ]
  },
  "systemd": {
    "units":[{
      "name": "update-engine.service",
      "enabled": false,
      "mask": true
    },
    {
      "name": "locksmithd.service",
      "enabled": false,
      "mask": true
    }]
  },
  "storage": {}
}
