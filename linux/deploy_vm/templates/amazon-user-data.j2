#cloud-config
chpasswd:
  list: |
    root:{{ vm_password_hash }}
  expire: false
ssh_pwauth: true
disable_root: false
repo_upgrade: none
ssh_authorized_keys:
  - {{ ssh_public_key }}

{% if new_user is defined and new_user != 'root' %}
users:
  - name: {{ new_user }}
    passwd: {{ vm_password_hash }}
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - {{ ssh_public_key }}
{% endif %}

runcmd:
  - [ sed, -i, "s/^#PermitRootLogin .*/PermitRootLogin yes/", "/etc/ssh/sshd_config"]
  - [ sed, -i, "s/^disable_root:.*/disable_root: false/", "/etc/cloud/cloud.cfg"]
  - [ sed, -i, "s/^ssh_pwauth:.*/ssh_pwauth: true/", "/etc/cloud/cloud.cfg"]
  - [ sed, -i, "s/^repo_upgrade:.*/repo_upgrade: none/", "/etc/cloud/cloud.cfg"]

write_files:
  - content: |
      network:
        config: disabled
    path: /etc/cloud/cloud.cfg.d/80_disable_network_after_firstboot.cfg
    permissions: '0644'

